    <title>Two Vertical Sections with Iframe and Tabs</title>
    <style>
        body {
            margin: 0;
            font-family: Arial, sans-serif;
            display: flex;
            height: 100vh;
        }
        .section-25 {
            width: 25%;
            background-color: #f8f9fa;
            padding: 20px;
            display: flex;
            flex-direction: column;
            align-items: stretch;
        }
        .section-75 {
            width: 75%;
            background-color: #e9ecef;
            display: flex;
            flex-direction: column;
        }
        .btn-stack {
            margin-bottom: 10px;
            padding: 10px;
            background-color: #6c757d;
            border: none;
            color: white;
            text-align: center;
            cursor: pointer;
            font-size: 16px;
            box-shadow: 0 5px #999;
        }
        .btn-stack:active {
            background-color: black;
            box-shadow: 0 3px #666;
            transform: translateY(4px);
        }
        .btn-stack.active {
            background-color: black;
            box-shadow: 0 3px #666;
        }
        .tabs {
            display: flex;
            background-color: #dee2e6;
            padding: 10px;
        }
        .tab {
            padding: 10px 20px;
            cursor: pointer;
            background-color: #6c757d;
            color: white;
            margin-right: 10px;
            border-radius: 5px;
        }
        .tab:hover {
            background-color: #5a6268;
        }
        .tab.active {
            background-color: #007bff;
        }
        iframe {
            width: 100%;
            height: calc(100vh - 60px); /* Adjust height based on padding and tabs */
            border: none;
        }
    </style>
