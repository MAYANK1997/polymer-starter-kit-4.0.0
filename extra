<body>
    <div class="table-container">
        <div class="table-header">
            Corporate Actions Events for the Week 08/19/2024 â€“ 08/23/2024
        </div>
        <table>
            <thead>
                <tr>
                    <th>Day</th>
                    <th>Corporate Action Type</th>
                    <th>Ticker</th>
                </tr>
            </thead>
            <tbody id="table-body">
                <!-- Data from the API will be inserted here -->
            </tbody>
        </table>
    </div>

    <script>
        // Function to fetch data from a backend API
        async function fetchTableData() {
            try {
                // Fetch data from an API (replace this with your actual API URL)
                const response = await fetch('https://api.example.com/corporate-actions');
                const data = await response.json();

                // Select the table body
                const tableBody = document.getElementById('table-body');

                // Clear any existing rows
                tableBody.innerHTML = '';

                // Iterate over the data and create table rows
                data.forEach(item => {
                    const row = `<tr>
                                    <td>${item.day}</td>
                                    <td>${item.actionType}</td>
                                    <td>${item.ticker}</td>
                                </tr>`;
                    tableBody.innerHTML += row;
                });
            } catch (error) {
                console.error('Error fetching table data:', error);
            }
        }

        // Fetch the table data when the page loads
        window.onload = fetchTableData;
    </script>
</body>
