onFilterTextBoxChanged() {
  const filterText = document.getElementById('filter-text-box').value.toLowerCase();
  this.gridApi.forEachNode((node) => {
    this.applyFilterToNodeAndChildren(node, filterText);
  });
}

applyFilterToNodeAndChildren(node, filterText) {
  if (node.group) {
    node.childrenAfterFilter.forEach((childNode) => {
      this.applyFilterToNodeAndChildren(childNode, filterText);
    });
  } else {
    node.setDataValue('ag-Grid-AutoColumn', filterText);
  }
}
