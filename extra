        .table-container {
            width: 80%;
            margin: auto;
            margin-top: 20px;
            border: 1px solid #ccc;
            box-shadow: 0px 2px 10px rgba(0, 0, 0, 0.1);
        }

        .table-header {
            background-color: #003366;
            color: white;
            padding: 10px;
            font-size: 18px;
            text-align: center;
        }

        table {
            width: 100%;
            border-collapse: collapse;
        }

        th, td {
            border: 1px solid #ccc;
            padding: 10px;
            text-align: left;
        }

        th {
            background-color: #0066cc;
            color: white;
        }

        td {
            background-color: #f9f9f9;
        }

        tr:nth-child(even) td {
            background-color: #e6e6e6;
        }

        .multiline {
            white-space: normal;
