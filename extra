<body>
    <div class="section-25">
        <button class="btn-stack active" onclick="changeIframe('https://www.example.com', 0)">Button 1</button>
        <button class="btn-stack" onclick="changeIframe('https://www.wikipedia.org', 1)">Button 2</button>
        <button class="btn-stack" onclick="changeIframe('https://www.openai.com', 2)">Button 3</button>
        <button class="btn-stack" onclick="changeIframe('https://www.github.com', 3)">Button 4</button>
    </div>
    <div class="section-75">
        <div class="tabs">
            <div class="tab active" onclick="changeIframe('https://www.example.com', 0)">Tab 1</div>
            <div class="tab" onclick="changeIframe('https://www.wikipedia.org', 1)">Tab 2</div>
            <div class="tab" onclick="changeIframe('https://www.openai.com', 2)">Tab 3</div>
            <div class="tab" onclick="changeIframe('https://www.github.com', 3)">Tab 4</div>
        </div>
        <iframe id="iframe" src="https://www.example.com"></iframe>
    </div>

    <script>
        function changeIframe(url, index) {
            document.getElementById('iframe').src = url;
            
            // Update tabs
            var tabs = document.getElementsByClassName('tab');
            for (var i = 0; i < tabs.length; i++) {
                tabs[i].classList.remove('active');
            }
            tabs[index].classList.add('active');

            // Update buttons
            var buttons = document.getElementsByClassName('btn-stack');
            for (var i = 0; i < buttons.length; i++) {
                buttons[i].classList.remove('active');
            }
            buttons[index].classList.add('active');
        }
    </script>
</body>
