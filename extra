onFilterTextBoxChanged() {
  const filterText = document.getElementById('filter-text-box').value.toLowerCase();
  this.applyFilterToNodes(this.gridApi.getRootNode(), filterText);
}

applyFilterToNodes(node, filterText) {
  if (node.group) {
    node.childrenAfterFilter.forEach(childNode => {
      this.applyFilterToNodes(childNode, filterText);
    });
  } else {
    node.setDataValue('ag-Grid-AutoColumn', filterText);
  }
}
