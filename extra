<body>
    <div class="container">
        <!-- Replicate Section -->
        <div class="section">
            <h2>Replicate User</h2>
            <div class="dropdown-row">
                <div>
                    <label for="source">Source:</label>
                    <select id="source">
                        <option value="Amit Amit">Amit Amit</option>
                        <option value="John Doe">John Doe</option>
                        <option value="Jane Smith">Jane Smith</option>
                    </select>
                </div>
                <div>
                    <label for="target">Target:</label>
                    <select id="target">
                        <option value="Amit Amit">Amit Amit</option>
                        <option value="John Doe">John Doe</option>
                        <option value="Jane Smith">Jane Smith</option>
                    </select>
                </div>
            </div>
            <button id="replicateButton">Replicate</button>
        </div>
        
        <div class="divider"></div>
        
        <!-- Restore Section -->
        <div class="section">
            <h2>Restore User</h2>
            <label for="userName">User Name:</label>
            <select id="userName">
                <option value="Amit Amit">Amit Amit</option>
                <option value="John Doe">John Doe</option>
                <option value="Jane Smith">Jane Smith</option>
            </select>
            <br>
            <button id="restoreButton">Restore</button>
        </div>
    </div>

    <script>
        document.getElementById('replicateButton').addEventListener('click', () => {
            const source = document.getElementById('source').value;
            const target = document.getElementById('target').value;
            alert(`Replicating user from ${source} to ${target}`);
        });

        document.getElementById('restoreButton').addEventListener('click', () => {
            const userName = document.getElementById('userName').value;
            alert(`Restoring user: ${userName}`);
        });
    </script>
