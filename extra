<body>
    <div class="table-container">
        <div class="table-header">
            Corporate Actions Events for the Week 09/03/2024 â€“ 09/05/2024
        </div>
        <table>
            <thead>
                <tr>
                    <th>Effective Date</th>
                    <th>Corporate Action Name</th>
                    <th>Tickers</th>
                </tr>
            </thead>
            <tbody id="table-body">
                <!-- Data from the API will be inserted here -->
            </tbody>
        </table>
    </div>

    <script>
        // Example data
        const apiData = [
            {
                "data": [
                    {
                        "corporateActionName": "Cash Dividend",
                        "tickers": ["NCC GROUP ORD"]
                    },
                    {
                        "corporateActionName": "Shareholder Meeting",
                        "tickers": ["SPEEDY HIRE ORD", "XPS PENSIONS GROUP ORD"]
                    }
                ],
                "effectiveDate": "2024-09-05"
            },
            {
                "data": [
                    {
                        "corporateActionName": "Shareholder Meeting",
                        "tickers": ["IOMART GROUP ORD"]
                    }
                ],
                "effectiveDate": "2024-09-03"
            }
        ];

        // Function to display the data
        function displayTableData() {
            const tableBody = document.getElementById('table-body');

            // Clear any existing rows
            tableBody.innerHTML = '';

            // Iterate over the API data
            apiData.forEach(eventGroup => {
                const date = eventGroup.effectiveDate;
                const corporateActions = eventGroup.data;

                corporateActions.forEach((action, index) => {
                    const row = document.createElement('tr');

                    // Only show the effective date for the first action in the group
                    if (index === 0) {
                        const dateCell = document.createElement('td');
                        dateCell.rowSpan = corporateActions.length; // Span the date over multiple rows
                        dateCell.innerText = date;
                        row.appendChild(dateCell);
                    }

                    // Add the corporate action name
                    const actionCell = document.createElement('td');
                    actionCell.innerHTML = action.corporateActionName;
                    row.appendChild(actionCell);

                    // Add the tickers (joined with <br> for line breaks)
                    const tickerCell = document.createElement('td');
                    tickerCell.innerHTML = action.tickers.join('<br>');
                    row.appendChild(tickerCell);

                    tableBody.appendChild(row);
                });
            });
        }

        // Display the data on page load
        window.onload = displayTableData;
    </script>
</body>
</html>
